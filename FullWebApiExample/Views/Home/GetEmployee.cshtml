@model FullWebApiExample.Models.Employee
@{
    Layout = "_Layout";
    ViewBag.Title = "GetEmployee";
}


<h2>Get Employee by Id <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<h3>@ViewBag.StatusCode</h3>
<form method="post">
    <div class="form-group">
        <label for="id">Id:</label>
        <input class="form-control" name="id" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Get Employee</button>
    </div>
</form>

@if (Model != null)
{
    <h3>Employee</h3>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Mobile</th>
                <th>Address</th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.Name</td>

                <td>@Model.Email</td>

                <td>@Model.Mobile</td>
                <td>@Model.Address</td>

            </tr>
        </tbody>
    </table>


}

