@model IEnumerable<FullWebApiExample.Models.Employee>
@{
    Layout = "_Layout";
    ViewBag.Title = "All Reservations";
}
<h2>All Employees</h2>

<a asp-action="GetEmployee" class="btn btn-secondary">Get Employee</a>
<a asp-action="AddEmployee" class="btn btn-success" style="right:200px;">Add Employee</a>

<table class="table table-sm table-striped table-bordered m-2">
    <thead class="thead-dark">
        <tr class="text-center">
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>Address</th>

            <th>Update</th>
            <th>Delete</th>
            <th>Details</th>




        </tr>
    </thead>
    <tbody>
        @foreach(var r in Model)
        {
        <tr>
            <td>@r.Id</td>
            <td>@r.Name</td>
            <td>@r.Email</td>

            <td>@r.Mobile</td>
            <td>@r.Address</td>
            <td>
                <a asp-action="UpdateEmployee" asp-route-id="@r.Id">
                    <i class="fa fa-marker fa-lg"></i>
                </a>
            </td>
            <td>
                <a asp-controller="Home" asp-action="DeleteEmployee" asp-route-id="@r.Id">
                    <i class="fa fa-trash-alt fa-lg"></i>
                </a>
            </td>
            <td>
                <a asp-controller="Home" asp-action="Details" asp-route-id="@r.Id">
                    <i class="fa fa-eye fa-lg"></i>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>


    <div>
        <a href="https://localhost:44346/api/Employee" style="margin-left:65rem;">Get Json</a>
    </div>

