@model IEnumerable<FullWebApiExample.Models.Reservation>
@{
    Layout = "_Layout";
    ViewBag.Title = "All Reservations";
}
<h2>All Reservations</h2>
<a asp-action="AddReservation" class="btn btn-primary">Add Reservation</a>
<a asp-action="GetReservation" class="btn btn-secondary">Get Reservation</a>

<table class="table table-sm table-striped table-bordered m-2">
    <thead class="thead-dark">
        <tr class="text-center">
            <th>ID</th>
            <th>Name</th>
            <th>Start Location</th>
            <th>End Location</th>
            <th>Update</th>
            <th>Delete</th>
            <th>Details</th>




        </tr>
    </thead>
    <tbody>
        @foreach(var r in Model)
        {
        <tr>
            <td>@r.Id</td>
            <td>@r.Name</td>
            <td>@r.StartLocation</td>
            <td>@r.EndLocation</td>
            <td>
                <a asp-action="UpdateReservation" asp-route-id="@r.Id">
                    <i class="fa fa-marker fa-lg"></i>
                </a>
            </td>
            <td>
                <a asp-controller="Home" asp-action="DeleteReservation" asp-route-id="@r.Id">
                    <i class="fa fa-trash-alt fa-lg"></i>
                </a>
            </td>
            <td>
                <a asp-controller="Home" asp-action="Details" asp-route-id="@r.Id">
                    <i class="fa fa-eye fa-lg"></i>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>


    <div>
        <a href="https://localhost:44346/api/Reservation" style="margin-left:65rem;">Get Json</a>
    </div>

