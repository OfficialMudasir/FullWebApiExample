                        <th>Name</th>&nbsp;
                        <th>Email</th>&nbsp;
                        <th>Mobile</th>&nbsp;
                        <th>Address</th>&nbsp;


                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td> @Model.Id</td>&nbsp;
                        <td> @Model.Name</td>&nbsp;

                        <td> @Model.Email</td>&nbsp;
                        <td> @Model.Mobile</td>&nbsp;
                        <td> @Model.Address</td>&nbsp;





                    </tr>
                </tbody>
            </table>

